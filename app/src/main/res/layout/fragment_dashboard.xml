<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.DashboardFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <ImageView
            android:id="@+id/foodtype"
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_foodtype_24" />

        <ImageView
            android:id="@+id/techtype"
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_techtype_24" />

        <ImageView
            android:id="@+id/fictiontype"
            android:layout_width="142dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_fictiontype_24" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arttype"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_arttype_24" />

        <ImageView
            android:id="@+id/naturetype"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_naturetype_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#009688"
            android:text="视频推荐"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/videorecommendlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>