<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserInfoActivity">

    <EditText
        android:id="@+id/new2pass"
        android:layout_width="254dp"
        android:layout_height="50dp"
        android:layout_marginTop="160dp"
        android:ems="10"
        android:hint="确认新密码"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnreg2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.753" />

    <EditText
        android:id="@+id/oldpass"
        android:layout_width="254dp"
        android:layout_height="50dp"
        android:layout_marginTop="248dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="输入旧密码"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/regpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99" />

    <EditText
        android:id="@+id/newpass"
        android:layout_width="254dp"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="输入新密码"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/reg2pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/btnnew"
        android:layout_width="254dp"
        android:layout_height="50dp"
        android:background="@drawable/button_circle_shape"
        android:backgroundTint="#009688"
        android:text="更新"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.735" />

</androidx.constraintlayout.widget.ConstraintLayout>